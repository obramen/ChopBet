<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <android.support.v7.widget.CardView
        android:id="@+id/balanceCard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        app:elevation="5dp"
        app:cardBackgroundColor="@color/transparent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GHS 0.00"
                android:layout_marginTop="60dp"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/bonusHeader"
                android:textSize="12sp"

                android:layout_marginStart="40dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/stick1"
                android:text="BONUS"/>

            <TextView
                android:id="@+id/bonusText"
                android:layout_below="@+id/bonusHeader"
                android:textSize="14sp"
                android:layout_alignStart="@+id/bonusHeader"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"/>

            <RelativeLayout
                android:id="@+id/stick1"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_alignParentBottom="true"
                android:layout_toStartOf="@+id/burrowedHeader"
                android:layout_margin="30dp">
            </RelativeLayout>

            <TextView
                android:id="@+id/burrowedHeader"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/stick1"
                android:text="BURROWED"/>

            <TextView
                android:id="@+id/burrowedText"
                android:layout_below="@+id/burrowedHeader"
                android:textSize="14sp"
                android:layout_alignStart="@+id/burrowedHeader"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"/>

            <RelativeLayout
                android:id="@+id/stick2"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_alignTop="@+id/stick1"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/burrowedHeader">
            </RelativeLayout>

            <TextView
                android:id="@+id/pointsHeader"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/stick2"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@+id/stick1"
                android:text="POINTS"/>

            <TextView
                android:id="@+id/pointsText"
                android:layout_below="@+id/pointsHeader"
                android:textSize="14sp"
                android:layout_alignStart="@+id/pointsHeader"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"/>





        </RelativeLayout>




    </android.support.v7.widget.CardView>


    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/balanceCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="5dp"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WITHDRAW"
            android:textSize="13sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADD FUNDS"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>





</RelativeLayout>